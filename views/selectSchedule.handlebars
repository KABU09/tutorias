<div class="container mt-5">
    <div class="row justify-content-center mt-5 pb-5">

        <h2 class="text-center mb-5">Seleccione el horario de la tutoría</h2>
        {{#if error}}
        {{>message message=error type="danger"}}
        {{/if}}
        {{#if success}}
        {{>message message=success type="success"}}
        {{/if}}
        {{#if warning}}
        {{>message message=warning type="warning"}}
        {{/if}}
        <div class="col-3">
            <h3 class="mb-3">Reglas</h3>
            <p class="mb-2">El mínimo es 1 hora</p>
            <p class="mb-2">Solo se pueden seleccionar horarios del mismo día</p>
            <p class="mb-2">Solo se pueden seleccionar horarios contiguos</p>
        </div>

        <div class="col-6">
            <form action="/tutoria/horario?tutorCursoId={{tutorCursoId}}&tutoriaId={{tutoriaId}}&tutorId={{tutorId}}"
                method="post">
                <div class="list-group" style="width: 20vw; overflow-y: auto; max-height: 60vh; margin: 0 auto;">
                    {{#each schedules}}
                    <label class="list-group-item">
                        <input class="form-check-input me-1" type="checkbox" name="{{this.fecha}}">
                        {{this.fechaInicio}} &nbsp;&nbsp;&nbsp; a &nbsp;&nbsp;&nbsp; {{this.fechaFin}}
                    </label>
                    {{/each}}
                </div>
                <div class="text-center mt-5">
                    {{#if schedules}}
                    {{!-- <a class="btn btn-danger me-3" href="/dashboard">Cancelar</a> --}}
                    <button class="btn btn-success ms-3" type="submit">Aceptar</button>
                    {{/if}}
                </div>
            </form>
        </div>
    </div>
</div>