{{#if error}}
{{>message message=error type="danger"}}
{{/if}}

<style>
    .col-md-6 {
        display: flex;

        flex-direction: column;

        align-items: center;
    }

    label {
        font-size: 20px;
        margin-bottom: 10px;
    }
</style>

<body>
    <h1 class="text-center" style="margin: 4%;">
        Mantenimiento de cursos
    </h1>
    <div class="container">
        <div class="row">
            <div class="col-md-6 ">
                <form action="addCurso">
                    <label for="nombreCurso">Nombre</label>
                    <input name="nombreCurso" type="text" class="form-control" id="nombreCurso"
                    >
                    <br>
                    <label for="sigla">Sigla</label>
                    <input name="sigla" type="text" class="form-control" id="sigla"
                    >
                    <button class="btn btn-dark my-4" type="submit">Agregar Curso</button>
                </form>
            </div>

            <div class="col-md-6 d-flex justify-content-center">
                <div>
                    {{#each cursos}}
                    <div>
                        <span tabindex="0" id={{this.id}} onclick="editarCurso('{{this.id}}')"
                            onkeyup="accesibilityEnter(event,{{this.id}})">
                            <i class="bi bi-pencil-fill"></i>
                        </span>
                        <label class="form-check-label" for="{{this.nombre}}">
                            {{this.nombre}}
                        </label>

                    </div>
                    {{/each}}
                </div>


            </div>
        </div>

    </div>
</body>

</html>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"
    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script>
    function accesibilityEnter(e, id) {
        if (e.key == 'Enter') {
            console.log('Enter pressed in ' + id);
            editarCurso(id);
        }
    }

    function editarCurso(id) {
        window.location.href = location.origin + '/admin/editarCurso?id=' + id;
    }


</script>