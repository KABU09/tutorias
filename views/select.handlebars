<style>
  .cont{
    margin-top: 20px;
    padding:15px;
    max-height:400px;
    overflow:auto;

  }
  form {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }
  label{
    margin-bottom: 15px;
  }
</style>
{{#if error}}
{{>message message=error type="danger"}}
{{/if}}
{{#if warning}}
{{>message message=warning type="warning"}}
{{/if}}
<div class="search-container">
    <form action="?">
        <input type="text" placeholder="Ingrese el curso que desea buscar..." name="search">
        <button type="submit"><i class="fa fa-search"></i>
    </form>
</div>

<form action="/dashboard/guardarNuevosCursos" method='post'>
  <div class='cont'>
    {{#if cursos}}
        {{#each cursos}}
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name='curso' id="flexCheckDefault" value="{{this.nombre}}">
            <label class="form-check-label" for="flexCheckDefault">
                {{this.nombre}}
            </label>
          </div>
        {{/each}}
    {{/if}}
      <button id="submit" type="submit" class="btn btn-primary mx-auto d-block">Seleccionar</button>
  </div>
</form>




