<style>
  h1 {
    text-align: center;
    margin-top: 4%;
    margin-bottom: 4%;
  }
</style>

<body>
  <h1>Listado de Usuarios</h1>
  <div class='container'>
    <div class="row">
      <div class='col-md-6'>
        <h2 style="text-align: center; margin-bottom: 25px;">Tutorandos</h2>
        <table class="table table-bordered">
          <thead>
            <tr class='table-dark'>
              <th scope="col">Nombre</th>
              <th scope="col">Apellido</th>
              <th scope="col">Correo</th>
              <th scope="col">Región</th>
            </tr>
          </thead>
          <tbody>
            {{#each tutorandos}}
            <tr>
              <td>{{this.primerNombre}}</td>
              <td>{{this.apellido}}</td>
              <td>{{this.correo}}</td>
              <td>{{this.region}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      <div class='col-md-6'>
        <h2 style="text-align: center; margin-bottom: 25px;">Tutores</h2>
        <table class="table table-bordered">
          <thead>
            <tr class='table-dark'>
              <th scope="col">Nombre</th>
              <th scope="col">Apellido</th>
              <th scope="col">Correo</th>
              <th scope="col">Región</th>
            </tr>
          </thead>
          <tbody>
            {{#each tutores}}
            <tr>
              <td>{{this.primerNombre}}</td>
              <td>{{this.apellido}}</td>
              <td>{{this.correo}}</td>
              <td>{{this.region}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>

    </div>
    <div class="d-flex justify-content-center">
    <button class="btn btn-dark mt-5" onclick="window.location.href = '/dashboard'">Volver al dashboard</button>
    </div>
  </div>

</body>

</html>